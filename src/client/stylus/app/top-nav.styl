//navbar
#top-nav
  background dark-pink
  height 38px
  @media (min-width: 420px) and (min-height: 320px)
    height 44px
  width 100%
  border 2px solid black
  box-sizing border-box
//items on navbar
#top-nav div
  font-size 25px
  @media (min-width: 420px) and (min-height: 320px)
    margin-bottom 3px
  float right
  position relative
  margin-top 2.1px
  &:hover
    background none 
.nav-btn
  padding 1px
  font-size 30px
  @media (min-width: 420px) and (min-height: 320px)
    padding 5px
  margin-right 6px
  display block
  text-align center
  background none
  color black
  text-decoration none
    


