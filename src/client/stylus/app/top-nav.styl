//navbar
#top-nav
  position fixed
  background #2c3e50
  height 38px
  width 100%
  min-width 700px
  no-around()
//items on navbar
#top-nav div
  float right
  position relative
  margin-top 1px
  &:hover
    background none 
.nav-btn
  padding 7px
  margin-right 4px
  display block
  text-align center
  background none
  color white
  text-decoration none
  &:hover
    background #233140 


