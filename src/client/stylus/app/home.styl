/* HOME BUTTONS */

//generic classes
.home-btn
  position absolute
  max-width 70px
  font-size 50px
  line-height 8px
  color black
  text-decoration none
  text-align center
  @media (min-width: 590px)
    font-size 55px
    max-width 90px
.home-btn-text
  font-size 14px
  @media (min-width: 590px)
    font-size 18px
//specific home buttons
#newcall-btn
  left 14%
  top 17%
  @media (min-width: 560px)
    left 22%
    top 20%
  @media (min-height: 400px) and (max-width: 280px)
    top 20%
  @media (max-height: 400px) and (min-width: 470px)
    top 11%
#profiles-btn
  right 14%
  top 17%
  @media (min-width: 560px)
    right 22%
    top 20%
  @media (min-height: 400px) and (max-width: 280px)
    top 20%
  @media (max-height: 400px) and (min-width: 470px)
    top 11%
#history-btn
  left 14%
  bottom 30%
  @media (min-width: 560px)
    left 22%
  @media (min-height: 400px) and (max-width: 280px)
    bottom 35%
  @media (max-height: 400px) and (min-width: 470px)
    bottom 20%
#about-btn
  right 14%
  bottom 30%
  @media (min-width: 560px)
    right 22%
  @media (min-height: 400px) and (max-width: 280px)
    bottom 35%
  @media (max-height: 400px) and (min-width: 470px)
    bottom 20%
#tox-logo
  position absolute
  right -2px
  bottom -4px
  width 43px
  height 76px
  @media (min-width: 590px)
    width 53px
    height 92px


