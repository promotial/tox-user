/* PROFILES LIST */

//profiles list container
#profiles-list
  position absolute
  height auto
  width 100%
  top 55px
  bottom 55px
  background-color white
  overflow auto
//profile item class
.profile-item
  width 100%
  height 50px
  background-color #ffeae2
  border-bottom 1px solid #666666
//profile-name class
.profile-name
  font-size 24px
  margin-left 20px
  font-size 22px
  color #ED3533
  line-height 55px
//profile-edit class
.profile-edit
  font-size 30px
  float right
  height 50px
  margin-right 15px
  color #ED3533
  line-height 58px
  text-decoration none
//profile-delete class
.profile-delete
  font-size 30px
  float right
  height 50px
  color #ED3533
  margin-right 20px
  line-height 54px
/* --PROFILES LIST */

//history item class
.history-item
  color #ED3533
  font-size 22px
  width 100%
  padding-left 10px
  padding-right 10px
  padding-top 12px
  padding-bottom 8px
  box-sizing border-box
  border none
  background-color #ffeae2
  border-bottom 1px solid #7f8c8d
  min-height 45px
