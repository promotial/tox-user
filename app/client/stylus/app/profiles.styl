#profiles-box
  position absolute
  bottom 40px
  top 0px
  width 100%
  height 100%
  background green
.profile-item
  height 40px
  border-bottom 2px solid black
#add-profile
  position fixed
  bottom 0px
  height 37px
  font-size 17px
  line-height 35px
  border-top 2px solid black
  border-bottom 2px solid black
  left 2px
  right 2px
  width auto
  text-align center
  background grey
  box-sizing border-box
  &:hover
    background grey-hover
.profile-name
  font-size 18px
  margin-left 10px
  line-height 41px
.profile-delete
  font-size 28px
  float right
  margin-right 30px
  line-height 38px
  cursor pointer
.profile-edit
  font-size 28px
  float right
  margin-right 20px
  line-height 42px
  cursor pointer


