#new-call-title
  background grey
  width 100%
  height 36px
  text-align center
  font-size 22px
  line-height 34px
  border-bottom 2px solid black
  box-sizing border-box
#call-profile-select
  width 96%
  height 9%
  margin-left 2%
  margin-right 2%
  margin-top 3%
  font-size 16px
  padding-top 4px
  padding-left 2px
.call-input-box
  margin-top 5%
  height 6%
  width 70%
  margin-left 2%
  line-height 28.3px
.call-input-title
  margin-left 3%
.call-input-weight
  margin-left 1.5%
  margin-bottom 6%
  width 26%
#call-name-input
  margin-left 4.3%
#loc-toggle
  width 112px
  margin-top 5px
  margin-left 12px
  font-size 14px
#loc-switch-title
  font-size 16px
  margin-left 14.5px
#gender-toggle
  width 120px
  margin-top 5px
  margin-right 12px
  font-size 14px
#gender-switch-title
  font-size 16px
  margin-left 28px
#attach-photos-btn
  width 92%
  height 8%
  position absolute
  bottom 14%
  text-align center
  background white
  border 2px solid black
  border-radius 15px
  left 3.5%
  display table
  box-sizing border-box
  &:hover
    background white-hover
#new-call-start
  background light-green
  width 100%
  position absolute
  bottom 0px
  height 10%
  text-align center
  font-size 24px
  display table
  border-top 2px solid black
  box-sizing border-box
  &:hover
    background lg-hover
#new-call-back
  position absolute
  font-size 24px
  left 10px
  width 30px
  height 34px
  text-align center
  display table
  border-right 2px solid black
  border-left 2px solid black
  text-decoration none
  top 0px
  &:hover
    background grey-hover
    text-decoration none
.new-call-back-txt
  display table-cell
  vertical-align middle

