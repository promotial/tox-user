//new call title
#newcall-title
  font-size 24px
  line-height 56px
  text-align center
  margin-left 14%
  color white
  font-family "Arial"
  font-weight 100

//back button
#back-btn
  left 10px
  top 6px
  width 20%
  height 38px
  text-align center
  line-height 50px
  font-size 0.95em
  @media (min-width:300px)
    font-size 1.1em
  @media (min-width:400px)
    font-size 1.3em
  border none
  border-radius 2px
  color white
  font-family "track"
  z-index 100
  border-bottom 7px solid #B31011
  position absolute
  background-color #ED3533
  &:hover
    border-bottom 7px solid #8e1011
    background-color #c83534
/* NEW CALL FORMS */

//new call forms container
#newcall-forms
  position absolute
  height auto
  width 100%
  top 55px
  bottom 60px
  background-color white
//call profile select
#call-profile-select
  color #ED3533
  border-radius 0
  border solid #d2d4d7 1px
  width 90%
  height 8%
  font-size 19px
  position absolute
  left 5%
  top 4%
//call input class
.call-input
  color #ED3533
  border-radius 0
  border solid #d2d4d7 1px
  font-size 19px
  position absolute
//age input form
#age-input
  left 5%
  top 17%
  width 40%
  height 8%
//weight input form
#weight-input
  right 5%
  top 17%
  width 40%
  height 8%
//mobile input form
#mobile-input
  left 5%
  top 34%
  width 40%
  height 8%
  height 8%
//locoation switch title
#loc-input-title
  left 5%
  top 50%
  width 60%
  height 8%
  border none
  background none
//select switch text
.select-switch-text
  font-family "Arial"
  font-size 16px
  font-weight 100
//gender select switch
#gender-select
  right 5%
  position absolute
  top 34%
  height 8.5%
  border-radius 0
  width 40%
  box-sizing border-box
  min-width 120px
//location select switch
#location-select
  right 5%
  position absolute
  top 50%
  height 8.5%
  border-radius 0
  width 40%
  box-sizing border-box
  min-width 120px
//attach photos box
#attach-photos
  background-color #ED3533
  height auto
  width 90%
  left 5%
  position absolute
  bottom 6%
  top 64%
  border-radius 6px
//individual photo thumbnails
.attach-photo
  position absolute
  width 31%
  height auto
  z-index 200
  margin auto
  position absolute
  top 0
  left 5%
  bottom 0
#attach-photo-1
  left 2%
#attach-photo-2
  left 35%
#attach-photo-3
  left 68%
//initiate call
#init-call-btn
  bottom 0
  position absolute
  width 100%
  height 60px
  border-bottom-left-radius 7px
  border-bottom-right-radius 7px
  background-color #06ad58
  color white
  text-align center
  line-height 67px
  font-size 22px
  &:hover
    background-color #06be60
.icon-phone
  position absolute
  font-size 50px
  color #56e066
  bottom 1%
  left 13%
